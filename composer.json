{
    "name": "aseqbase/aseqbase",
    "description": "a sequence based web development framework",
    "type": "framework",
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Mohammad Fathi",
            "email": "i@mimfa.net",
            "homepage": "https://mfathi.ir",
            "role": "Lead Developers"
        },
        {
            "name": "Martin Fixoni",
            "role": "Back-end Developer"
        },
        {
            "name": "Jacoob Del Pano",
            "role": "UI/UX Designer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "composer/installers": "^1.12",
        "php": "^8.2",
        "ext-pdo": "*"
    },
    "scripts": {
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "php -S localhost:8000", 
            "net start MySQL",
            "php index.php"
        ],
        "install": [
            "MiMFa\\Installer::Install"
        ],
        "update": [
            "MiMFa\\Installer::Update"
        ],
        "post-install-cmd": [
            "MiMFa\\Installer::Install"
        ],
        "post-update-cmd": [
            "MiMFa\\Installer::Update"
        ]
    },
    "autoload": {
        "files": [ "-installer/Installer.php" ],
        "psr-4": {
            "MiMFa\\": ["model/","-installer/"]
        }
    },
    "extra": {
        "installer-paths": {
            "./": ["aseqbase/aseqbase", "type:framework", "type:patch", "type:package"],
            "{$name}/": ["type:project", "type:directory"],
            "model/library/": ["type:library"],
            "model/component/": ["type:component"],
            "model/module/": ["type:module"],
            "model/template/": ["type:template"],
            "view/": ["type:view"],
            "route/": ["type:route"],
            "compute/": ["type:compute"],
            "asset/": ["type:asset"]
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
